.training__header
	clearfix()
	width 100%
	height 55px
	background $wikigreen

.training__breadcrumb
	vertical-align()
	float left
	margin-left 0
	padding-left 20px
	list-style none
	li
		margin-right 5px
		display inline
		color #fff
		font-weight 700

.training__counter
	float right
	height 100%
	padding 0 20px
	background-color $wikigreen-dark
	p
		float left
		font-size 14px
		font-weight 600
		color #fff
	.bar-container
		float left
		margin-top 21px
		margin-left 10px
	.bar
		margin-bottom 2px
		height 2px
		width 13px
		background-color #fff