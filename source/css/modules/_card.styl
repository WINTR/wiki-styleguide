.card-block
  width 100%
  max-width 600px
  margin-bottom 30px
  background #fff
  box-shadow 0px 1px 6px rgba(0,0,0, .1)

.card-block__header
  background $wikigreen
  height 45px
  color #fff
  .icon-card
    float right
    width 45px
    height 45px
    background $wikigreen-dark
    img
      width 45%
      margin 14px 0 0 12px

.card-block__title
  float left
  padding 12px 0 12px 20px
  font-size 18px
  letter-spacing .5px
  color #fff

.card-block__content
  padding 20px 20px 25px 20px
  
