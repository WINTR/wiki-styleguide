/* /////////////////////////////////////////////////////

UTILS
General CSS utilities and mixins

///////////////////////////////////////////////////// */


gpu()
  -webkit-transform translate3d(0, 0, 0)

hide-text()
  border 0
  font 0/0 a
  text-shadow none
  color transparent
  background-color transparent

vertical-align()
  position relative
  top 50%
  transform translateY(-50%)


/* Responsive Mixins
------------------------------------------------ */

// To create min-width media queries
above(width)
  @media screen and (min-width: width)
    {block}

// To create max-width media queries
below(width)
  @media screen and (max-width: width)
    {block}
      
// Hide on mobile
.no-mobile
  display: none
  
  +above(tablet)
    display block

// Only on mobile
.mobile-only
  display: block
  
  +above(tablet)
    display none