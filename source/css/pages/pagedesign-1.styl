/*shame.scss*/
html
  box-sizing border-box

*, *before, *after
  box-sizing inherit

$concrete= #F1f1f1
$iron= #CCCCCC
$steel= #666666
$jaguar= #2B2B2B
$purplerain= #465DB9
$shadow= rgba(0,0,0, .3)
$wikipurple= #556192
$wikipurple-dark= #444E75
$maroon= #B0174F
$maroon-dark= #941342
$teal= #41B293
$teal-dark= #359178

$slide-width= 1000px

.grid1 
  float left
  width 100%

.flex
   display flex

.py1 
  padding 1rem 0

.py2 
  padding 2rem 0

html
  width 100%
  background $concrete

.wrap 
  max-width 1200px
  margin 0 auto

img
  width 100%

body 
  font-family "Open Sans"
  overflow-x hidden

.right 
float right

.logo 
  float left
  margin-top 5px
  width 35px

header 
  background #fff
  float left
  width 100%
  padding 5px 2% 5px 2%
  p
    margin-top 20px

.ui
font-size 15px

.breadcrumb 
  max-width $slide-width
  margin 0 auto
  a 
    color $steel
    font-size 12px

.breadcrumb,.training
  @extend .grid1


.training__header 
  height 55px
  float left
  width 100%
  color #fff
  background $teal


.training__wrap 
  width 1200px
  margin 0 auto
  height 100%


.training__title 
  float left
  p
    font-size 16px
    margin-top 19px
    font-weight 700
    text-transform uppercase
    letter-spacing .04em

.training__counter
  min-width 230px
  height 100%
  background $teal-dark
  cursor pointer 
  padding-top 20px
  padding-left 60px
  p,.bar-container
    float left
  
  .bar-container
    margin-top 3px
    margin-left 10px
  
.bar 
  margin-bottom 2px
  height 2px
  width 13px
  background #fff


.slide 
  clear both
  width 100%
  max-width $slide-width - 250
  margin 0 auto 2rem auto
  h1 
    font-size 22px
    font-weight 700
    padding-bottom 1rem
  
  p, ul li
    font-size 19px
    line-height 29px
    padding .75rem 0
    font-weight 300
  
  ul 
    padding-left 1rem
  
  ul li 
    list-style-type disc
    margin-left 1rem
    padding .4rem 0
  


.footer 
  display flex
  justify-content space-between
  width 100%
  max-width $slide-width
  margin 0 auto
  font-style italic
  border-top 1px solid $steel
  padding-top 1.25rem
  padding-bottom 3rem
  a 
    align-self center
    color $jaguar
  


.dropdown 
  cursor pointer 
  position absolute
  top 0
  right 0
  color #fff
  font-weight 400
  padding 15px
  background #3A3D46
  border-radius 4px
  width 250px
  box-shadow -3px 5px 10px $shadow
  p 
    font-weight bold
  ul
    margin-top 40px
  ul li
    margin 10px 0
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    line-height 21px
  span 
    margin-left 5px

.display-none 
  display none

.no-decoration
  text-decoration none

button 
  background $wikipurple
  border 0px
  color #fff
  padding 0px
  font-family "Open Sans"
  font-size 15px 
  font-weight 700
  letter-spacing 2px
  float right
  margin-top 10px
  margin-right 10px
  p 
    padding 12px 20px 0 20px
    float left
    font-weight 300
  

button:hover 
  background $purplerain

.icon 
  float right
  width 45px
  height 45px
  background $wikipurple-dark
  img 
    width 45%
    margin-top 14px
    margin-left 0px
  
